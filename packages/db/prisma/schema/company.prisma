model Company {
  id                  String        @id @default(cuid())
  orgId               String        @unique
  ownerId             String
  logoFileId          String?
  registrationNumber  String?
  name                String?
  dba                 String?
  capital             Int?
  incorporationDate   DateTime?
  legalType           String?
  phoneNumber         String?
  address             Address?
  lockedBeneficiaries Boolean       @default(false)
  status              CompanyStatus @default(INCOMPLETE)
  rejectionMotive     String?
  metadata            Json?
  locked              Boolean       @default(false)
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt

  indexationNumber BigInt @unique @default(autoincrement()) @db.BigInt

  logoFile UploadedFile? @relation(name: "logoFile", fields: [logoFileId], references: [id])

  @@index([orgId])
}
