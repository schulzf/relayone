{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "./Core/PDFRenderer/Templates/**/*.html",
        "outDir": "dist",
        "watchAssets": true
      },
      {
        "include": "./Core/I18n/locales/**/*.json",
        "outDir": "dist",
        "watchAssets": true
      }
    ]
  }
}
