{
  "name": "api",
  "version": "1.0.0",
  "scripts": {
    "webhooks": "ngrok start --config ngrok.yaml --all",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "ENV=dev BUNDLE=ALL nest start --watch",
    "dev:email": "email dev --dir ./src/Core/Email/Transactional",
    "start:dev": "ENV=dev BUNDLE=ALL nest start --watch ./src/main.ts",
    "start:dev:trpc": "ENV=dev BUNDLE=TRPC nest start --watch ./src/main.ts",
    "start:dev:local-ui": "ENV=dev BUNDLE=LOCAL_UI nest start --watch ./src/main.ts",
    "start:debug": "nest start --debug --watch",
    "start:prod": "ENV=dev node dist/main",
    "lint": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "i18n:pull": "npx i18nexus-cli pull -k 3TpRU01KxEfUbXuz0vD-ew -p ./src/Core/I18n/locales",
    "posti18n:pull": "i18next-resources-for-ts toc -i ./src/Core/I18n/locales/en -o ./src/Core/I18n/i18next-resources.ts"
  },
  "license": "proprietary",
  "dependencies": {
    "@babel/runtime": "^7.27.1",
    "@clerk/backend": "^1.31.2",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/bullmq": "^11.0.2",
    "@nestjs/common": "^11.1.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.0",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/platform-express": "^11.1.0",
    "@nestjs/platform-fastify": "^11.1.0",
    "@nestjs/schedule": "^6.0.0",
    "@repo/db": "workspace:*",
    "@repo/permissions-enduser": "workspace:*",
    "@repo/superjson": "workspace:*",
    "@trpc/server": "^11.1.2",
    "dotenv": "^16.3.1",
    "fastify": "^5.3.2",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^4",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.0",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "prettier": "^3.1.0"
  }
}
